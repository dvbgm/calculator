CXX = g++
CXXFLAGS = -std=c++11 -Wall -Wextra -Iinclude
LDFLAGS = -lpthread

# –û—Å–Ω–æ–≤–Ω–∞—è –ø—Ä–æ–≥—Ä–∞–º–º–∞
SRC_DIR = src
SRC = $(SRC_DIR)/config6.cpp
TARGET = calculator_server

# –¢–µ—Å—Ç—ã
TESTS_DIR = tests
TESTS_SRC = $(TESTS_DIR)/tests.cpp
TEST_TARGET = calculator_tests

all: $(TARGET)

$(TARGET): $(SRC)
	@echo "üîπ –°–±–æ—Ä–∫–∞ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è..."
	@$(CXX) $(CXXFLAGS) -o $@ $^ $(LDFLAGS)
	@echo "‚úÖ –ì–æ—Ç–æ–≤–æ: ./$(TARGET)"

test: $(TEST_TARGET)
	@echo "üîπ –ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤..."
	@if ./$(TEST_TARGET); then \
		echo "‚úÖ –í—Å–µ —Ç–µ—Å—Ç—ã –ø—Ä–æ–π–¥–µ–Ω—ã!"; \
	else \
		echo "‚ùå –¢–µ—Å—Ç—ã –∑–∞–≤–µ—Ä—à–∏–ª–∏—Å—å —Å –æ—à–∏–±–∫–∞–º–∏!"; \
		exit 1; \
	fi

$(TEST_TARGET): $(TESTS_SRC)
	@echo "üîπ –ö–æ–º–ø–∏–ª—è—Ü–∏—è —Ç–µ—Å—Ç–æ–≤..."
	@$(CXX) $(CXXFLAGS) -o $@ $^ $(LDFLAGS)

clean:
	@rm -f $(TARGET) $(TEST_TARGET)
	@echo "üßπ –û—á–∏—Å—Ç–∫–∞ –ø—Ä–æ–µ–∫—Ç–∞"

.PHONY: all clean test
